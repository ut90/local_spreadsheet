{
  "name": "local-spreadsheet",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k -n VITE,MAIN,PRE,ELC -c blue,magenta,cyan,green \"vite\" \"tsc -w -p tsconfig.main.json\" \"tsc -w -p tsconfig.preload.json\" \"wait-on tcp:5173 && electron .\"",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "start": "electron .",
    "lint": "echo 'add ESLint later'",
    "typecheck": "tsc -p tsconfig.renderer.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "electron": "^31.3.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "^2.5.1",
    "diff": "^5.2.0",
    "glide-data-grid": "^6.1.5"
  }
}
