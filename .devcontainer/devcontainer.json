{
  "name": "localspreadsheet",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "type=volume,source=localspreadsheet-modules,target=${containerWorkspaceFolder}/node_modules"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shellIntegration.enabled": true
      },
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "ms-ceintl.vscode-language-pack-ja",
        "openai.chatgpt",
        "yzhang.markdown-all-in-one",
        "ms-playwright.playwright"
      ]
    }
  }
}